            <Label x:Name="rezhim" Content="Обычный режим" Canvas.Left="765" Canvas.Top="10" RenderTransformOrigin="0.733,0.442" Width="144" Cursor="Hand" FontSize="10" Foreground="#FFCECECE" MouseUp="Label_MouseUp" Opacity="0" Visibility="Hidden"/>
            <Label x:Name="showerCpusLabel" Content="Показать все товары" Canvas.Left="746" Canvas.Top="10" Width="143" Foreground="#FFF8D5D5" FontStyle="Italic" Cursor="Hand" MouseUp="Label_MouseUp_1" Visibility="Hidden"/>
